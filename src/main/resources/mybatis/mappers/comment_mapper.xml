<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="comment">
  	<select id="list" resultType="Comment_Vo">
  		SELECT * FROM COMMENT WHERE P_NO=#{eve_no} ORDER BY CO_NO DESC
  	</select>
  	
  	<insert id="create">
  		INSERT INTO COMMENT (WRITER,EMAIL,CONTENT,CO_TYPE,P_NO,) VALUES (#{writer},#{email},#{content},#{co_type},#{eve_no})
  	</insert>
  	
 	<update id="update">
 		UPDATE COMMENT SET CONTENT=#{content}, NALJA=NOW() WHERE CO_NO=#{co_no}
 	</update>
 	
 	<delete id="delete">
 		DELETE FROM COMMENT WHERE CO_NO=#{co_no}
 	</delete>
  </mapper>